<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1>New Flair</h1>
<!-- #1 -->
      <form action="/posts/<%= flair.postId %>/flairs/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Flair Name</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
        </div>
        <div class="form-group">
          <label for="color">Flair Color</label>
          <textarea rows="4" class="form-control" name="color" placeholder="Enter flair color"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>